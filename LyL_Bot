// Maneja mensajes de texto
bot.on('message', (msg) => {
  const chatId = msg.chat.id;
  const messageText = msg.text.toLowerCase(); // Convertimos el texto a min√∫sculas para facilitar la comparaci√≥n

  // Verifica si el mensaje recibido no es el comando /start
  if (!messageText.startsWith('/start')) {
    // Respuesta para cualquier mensaje que no sea /start
    bot.sendMessage(chatId, '¬°Hola! Soy un bot de LyL Agency. Mis respuestas son limitadas y automatizadas. Por favor, contin√∫a con el registro y al final encontrar√°s el contacto de Jessika, quien estar√° a cargo de tu proceso. Para volver al inicio, puedes escribir /start.');
